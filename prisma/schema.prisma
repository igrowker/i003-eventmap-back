generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  Deportivo
  Artistico
  Gastronomico
}

enum Role {
  Company
  Admin
}

model Event {
  id          String   @id
  name        String
  type        Type
  date        String
  time        String
  location    Json
  photos      String[]
  description String
  amount      Float    @default(0.0)
  createdAt   DateTime @default(now())
  user        User     @relation(name: "EventToUser", fields: [userId], references: [id])
  userId      String
  capacity    String   @default("Sin definir")
  addres      String
}

model User {
  id        String   @id
  name      String
  lastName  String
  email     String   @unique
  password  String
  cuit      String   @unique
  rol       Role     @default(Company)
  events    Event[]  @relation(name: "EventToUser")
  state     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin String?  @default("")
}

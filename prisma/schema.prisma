generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TypeEvent {
  Deportivo
  Artistico
  Gastronomico
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  type        TypeEvent
  date        String
  time        String
  location    Json
  photos      String[]
  description String
  amount      Float    @default(0.0)
  createdAt   DateTime @default(now())
  user        User     @relation(name: "EventToUser", fields: [userId], references: [id])
  userId      Int
}

enum Roles {
  admin
  company
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  lastName  String
  email     String   @unique
  password  String
  cuit      String   @unique //cambiar tipo a number
  rol       Roles    @default(company) //q sea el tipo enum : admin o company en ves de string
  events    Event[]  @relation(name: "EventToUser")
  state     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin String?  @default("")
}
